{
    "$schema": "https://scc-cli.dev/schemas/org-v1.json",
    "schema_version": "1.0.0",
    "organization": {
        "name": "Sundsvalls kommun",
        "id": "sundsvalls-kommun",
        "contact": "it-utveckling@sundsvall.se"
    },
    "marketplaces": {
        "sandboxed-code-official": {
            "source": "github",
            "owner": "CCimen",
            "repo": "sandboxed-code-plugins"
        },
        "anthropics-claude-code": {
            "source": "github",
            "owner": "anthropics",
            "repo": "claude-code"
        },
        "ccplugins-awesome-claude-code-plugins": {
            "source": "github",
            "owner": "CCPlugins",
            "repo": "awesome-claude-code-plugins"
        },
        "steveyegge-beads": {
            "source": "github",
            "owner": "steveyegge",
            "repo": "beads"
        },
        "sivalabs-marketplace": {
            "source": "github",
            "owner": "sivaprasadreddy",
            "repo": "sivalabs-marketplace"
        }
    },
    "security": {
        "blocked_plugins": [
            "*-experimental",
            "*-deprecated",
            "*-beta",
            "malicious-*"
        ],
        "blocked_mcp_servers": [
            "*.untrusted.com"
        ],
        "blocked_base_images": [
            "*:latest"
        ],
        "allow_stdio_mcp": false,
        "safety_net": {
            "action": "block",
            "block_force_push": true,
            "block_reset_hard": true,
            "block_branch_force_delete": true,
            "block_checkout_restore": true,
            "block_clean": true,
            "block_stash_destructive": true
        }
    },
    "defaults": {
        "enabled_plugins": [
            "scc-safety-net@sandboxed-code-official"
        ],
        "network_policy": "unrestricted",
        "session": {
            "timeout_hours": 10,
            "auto_resume": true
        }
    },
    "delegation": {
        "teams": {
            "allow_additional_plugins": ["*"],
            "allow_additional_mcp_servers": ["ai-teamet", "draken", "dept44"]
        },
        "projects": {
            "inherit_team_delegation": true
        }
    },
    "profiles": {
        "ai-teamet": {
            "description": "AI-teamet - FastAPI, Python backend, SvelteKit frontend",
            "additional_plugins": [
                "frontend-design@anthropics-claude-code",
                "ralph-wiggum@anthropics-claude-code",
                "changelog-generator@ccplugins-awesome-claude-code-plugins",
                "python-expert@ccplugins-awesome-claude-code-plugins"
            ],
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "draken": {
            "description": "Draken - Accessibility-focused frontend development",
            "additional_plugins": [
                "accessibility-expert@ccplugins-awesome-claude-code-plugins",
                "frontend-design@anthropics-claude-code",
                "beads@steveyegge-beads"
            ],
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "dept44": {
            "description": "Dept44 - Spring Boot, Java microservices",
            "additional_plugins": [
                "ralph-wiggum@anthropics-claude-code",
                "spring-boot-dev@sivalabs-marketplace"
            ],
            "network_policy": "corp-proxy-only",
            "delegation": {
                "allow_project_overrides": false
            }
        }
    },
    "stats": {
        "enabled": true,
        "user_identity_mode": "hash",
        "retention_days": 90
    }
}
