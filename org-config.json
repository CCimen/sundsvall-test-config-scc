{
    "$schema": "https://scc-cli.dev/schemas/org-v1.json",
    "schema_version": "1.0.0",
    "organization": {
        "name": "Hofors kommun",
        "id": "hofors-kommun",
        "contact": "it-support@hofors.se"
    },
    "marketplaces": {
        "sandboxed-code-official": {
            "source": "github",
            "owner": "CCimen",
            "repo": "sandboxed-code-plugins"
        },
        "anthropic-official": {
            "source": "github",
            "owner": "anthropics",
            "repo": "claude-code-plugins"
        },
        "wshobson-agents": {
            "source": "github",
            "owner": "wshobson",
            "repo": "claude-code-agents"
        },
        "thedotmack-mem": {
            "source": "github",
            "owner": "thedotmack",
            "repo": "claude-mem"
        }
    },
    "security": {
        "blocked_plugins": ["*-experimental", "*-unsafe"],
        "blocked_mcp_servers": ["*.untrusted.com"],
        "blocked_base_images": ["*:latest"],
        "allow_stdio_mcp": false,
        "safety_net": {
            "action": "block",
            "block_force_push": true,
            "block_reset_hard": true,
            "block_branch_force_delete": true,
            "block_checkout_restore": true,
            "block_clean": true,
            "block_stash_destructive": true
        }
    },
    "defaults": {
        "enabled_plugins": [
            "scc-safety-net@sandboxed-code-official"
        ],
        "network_policy": "unrestricted",
        "session": {
            "timeout_hours": 12,
            "auto_resume": true
        }
    },
    "delegation": {
        "teams": {
            "allow_additional_plugins": ["*"],
            "allow_additional_mcp_servers": ["pixeldraken", "api-ninjas"]
        },
        "projects": {
            "inherit_team_delegation": true
        }
    },
    "profiles": {
        "pixeldraken": {
            "description": "Frontend React team - 'The Pixel Dragon' - breathing fire into UIs since 2024",
            "additional_plugins": [
                "scc-safety-net@sandboxed-code-official",
                "frontend-design@anthropic-official",
                "accessibility-compliance@wshobson-agents"
            ],
            "additional_mcp_servers": [
                {
                    "name": "context7",
                    "type": "http",
                    "url": "https://mcp.context7.com/mcp"
                }
            ],
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "api-ninjas": {
            "description": "Backend FastAPI team - 'The API Ninjas' - silently returning 200 OK",
            "additional_plugins": [
                "scc-safety-net@sandboxed-code-official",
                "python-development@wshobson-agents",
                "claude-mem@thedotmack-mem"
            ],
            "additional_mcp_servers": [
                {
                    "name": "context7",
                    "type": "http",
                    "url": "https://mcp.context7.com/mcp"
                }
            ],
            "delegation": {
                "allow_project_overrides": true
            }
        },
        "default": {
            "description": "Default profile for new team members",
            "additional_plugins": [
                "scc-safety-net@sandboxed-code-official"
            ]
        }
    },
    "stats": {
        "enabled": true,
        "user_identity_mode": "hash",
        "retention_days": 90
    }
}
